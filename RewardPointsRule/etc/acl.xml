<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
	<acl>
		<resources>
			<resource id="Magento_Backend::admin">
				<resource id="Lof_RewardPoints::rewardpoints" title="Reward Points">
					<resource id="Lof_RewardPoints::earning" title="Earning" sortOrder="10">
						<resource id="Lof_RewardPointsRule::catalog_earning_rule" title="Catalog Rule" sortOrder="30" />
						<resource id="Lof_RewardPointsRule::cart_earning_rule" title="Cart Rule" sortOrder="40" />
						<resource id="Lof_RewardPointsRule::convert_earning_data" title="Convert Earning Serialized Data to Json" sortOrder="50" />
					</resource>
					<resource id="Lof_RewardPoints::spending" title="Spending" sortOrder="20">
						<resource id="Lof_RewardPointsRule::catalog_spending_rule" title="Catalog Rule" sortOrder="10" />
						<resource id="Lof_RewardPointsRule::cart_spending_rule" title="Cart Rule" sortOrder="20" />
						<resource id="Lof_RewardPointsRule::convert_spending_data" title="Convert Spending Serialized Data to Json" sortOrder="50" />
					</resource>
				</resource>
			</resource>
		</resources>
	</acl>
</config>